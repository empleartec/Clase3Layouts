<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#E1E1E1"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CalculadoraActivity">

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingRight="4dp"
        android:text="1234567890"
        android:textSize="40sp"
        android:background="#F0F0F0"
        android:maxLines="1" />

    <LinearLayout
        android:id="@+id/basica"
        android:layout_below="@id/resultado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_marginTop="20dp" >
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="20" android:orientation="horizontal" android:weightSum="100">
           <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="25" android:text="C" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" android:textColor="#ff0000"/>
           <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="25" android:text="&#247;" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" android:textColor="#00A3C1"/>
           <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="25" android:text="X" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" android:textColor="#00A3C1"/>
            <ImageButton  android:src="@drawable/backspace" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="25" android:text="" android:gravity="center"
                android:layout_margin="1dp" android:textSize="20sp" android:textColor="#00A3C1" android:background="#FFFFFF" />
        </LinearLayout>

       <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="20" android:orientation="horizontal" android:weightSum="100">
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="7" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" />
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="8" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" />
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="9" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" />
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="-" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" android:textColor="#00A3C1" />
       </LinearLayout>

       <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="20" android:orientation="horizontal" android:weightSum="100">
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="4" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" />
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="5" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" />
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="6" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" />
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="+" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" android:textColor="#00A3C1" />
       </LinearLayout>

       <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="20" android:orientation="horizontal" android:weightSum="100">
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="1" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" />
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="2" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" />
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="3" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" />
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="()" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" android:textColor="#00A3C1" />
       </LinearLayout>

       <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="20" android:orientation="horizontal" android:weightSum="100">
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="0" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" />
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="." android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" />
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="+/-" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" />
           <Button android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="25" android:text="=" android:gravity="center" android:background="#FFFFFF" android:layout_margin="1dp" android:textSize="30sp" android:textColor="#44AA5A" />
       </LinearLayout>

   </LinearLayout>

</RelativeLayout>
